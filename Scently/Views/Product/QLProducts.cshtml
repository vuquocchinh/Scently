<h2 style="text-align:center; margin-top:50px;">QLProducts</h2>
<table style="margin-top: 70px;" class="table">
    <tr>
        <th> Mã loại </th>
        <th> Tên sách</th>
        <th> Hình </th>
        <th> Giá bán</th>
        <th> Ngày cập nhật </th>
        <th> Số lượng tồn</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.idDM)</td>
            <td>@Html.DisplayFor(modelItem => item.tenSP)</td>
            <td><img style="width :300px;" src="@item.hinhAnhSP" alt="hinh thumbnail" /></td>
            <td>@Html.DisplayFor(modelItem => item.giaSP)</td>
            <td>@Html.DisplayFor(modelItem => item.ngayCapNhat)</td>
            <td>@Html.DisplayFor(modelItem => item.soLuongSP)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idSP }) <br />
                @Html.ActionLink("Details", "Details", new { id = item.idSP }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = item.idSP }) <br />
                <a href="@Url.Action("Create")"><i class="fas fa-circle-plus"></i> Create</a>

            </td>



        </tr>
    }
</table>